{
  "dashboard": {
    "title": "Portfolio Monte Carlo Application",
    "tags": ["portfolio", "monte-carlo", "application"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "title": "Request Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"portfolio-app\"}[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "title": "Response Time (p95)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"portfolio-app\"}[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"portfolio-app\"}[5m]))",
            "legendFormat": "p50"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"portfolio-app\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          },
          {
            "expr": "rate(http_requests_total{job=\"portfolio-app\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "title": "Active Pods",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"portfolio-app\",pod=~\"portfolio-app-.*\"})"
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4}
      },
      {
        "title": "CPU Usage",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"portfolio-app\",pod=~\"portfolio-app-.*\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"portfolio-app\",pod=~\"portfolio-app-.*\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8}
      },
      {
        "title": "Cache Hit Rate",
        "type": "gauge",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(cache_hits_total{job=\"portfolio-app\"}[5m]) / rate(cache_requests_total{job=\"portfolio-app\"}[5m]) * 100"
          }
        ],
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4}
      },
      {
        "title": "Monte Carlo Simulations",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(monte_carlo_simulations_total{job=\"portfolio-app\"}[5m])",
            "legendFormat": "Simulations/sec"
          }
        ],
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8}
      },
      {
        "title": "Simulation Duration (p95)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(monte_carlo_duration_seconds_bucket{job=\"portfolio-app\"}[5m]))",
            "legendFormat": "p95 duration"
          }
        ],
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8}
      },
      {
        "title": "Database Connections",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "pg_stat_activity_count{namespace=\"portfolio-app\"}",
            "legendFormat": "Active connections"
          }
        ],
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8}
      },
      {
        "title": "Redis Memory Usage",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "redis_memory_used_bytes{namespace=\"portfolio-app\"}",
            "legendFormat": "Memory used"
          }
        ],
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8}
      }
    ]
  }
}
